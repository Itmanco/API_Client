@model MExperiment.Models.Rates
@{
    ViewData["Title"] = "Create";
}


<h2>Create</h2>

<h4>Rate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="hidden">
                <input asp-for="IdVideo" class="form-control" readonly="readonly" value="@ViewData["SelectedMovie"]" />
            </div>
            <div class="hidden">
                <input asp-for="IdUser" class="form-control" readonly="readonly" value="@ViewData["userLogged"]" />
            </div>
            <div class="form-group">                
                <label asp-for="Rate" class="control-label">Rate</label>
                <input asp-for="Rate" class="form-control" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTime" class="control-label"></label>
                <input asp-for="DateTime" class="form-control" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
